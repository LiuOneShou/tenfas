/* pages/sellcar/sellcar.wxss */
.sellCar_top image{
	position: relative;
    width: 100%;
    height: 350rpx;
}
.sellCar_topField{
	width: 90%;
	margin: 0 auto;
	position: relative;
	margin-top: -150rpx;
	height: 600rpx;
	background-color: #ffffff;
	box-shadow: 0 0 2.66667vw 0 rgb(74 101 172 / 18%);
	border-radius: 10rpx;
	padding: 20rpx 40rpx;
	box-sizing: border-box;
}
.van_field{
	position: relative;
	display: flex;
    align-items: center;
    height: 100rpx;
}
.van_field::after {
    position: absolute;
    box-sizing: border-box;
    content: ' ';
    pointer-events: none;
    right: 16px;
    bottom: 0;
    left: 16px;
    border-bottom: 1px solid #ebedf0;
    transform: scaleY(.5);
}
.van_field view{
	width: 150rpx;
}
.btn{
	width: 100%;
}